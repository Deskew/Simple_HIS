<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 医疗服务综合查询系统</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("医疗服务综合查询系统", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("综合查询", "Index", "Home")</li>
                    <li>@Html.ActionLink("医务人员管理", "Index", "医务人员信息表")</li>
                    <li>@Html.ActionLink("医疗设备管理", "Index", "医疗设备信息表")</li>
                    <li>@Html.ActionLink("药品管理", "Index", "药品信息表")</li>
                    <li>@Html.ActionLink("诊疗方案管理", "Index", "诊疗方案信息表")</li>
                </ul>
            </div>
        </div>
    </div>
    <div style="width: auto; background-color: #1E90FF;">
        @if (Request.IsAuthenticated)
        {
            <strong>@Html.Encode(User.Identity.Name)</strong>
            @Html.ActionLink("Sign Out", "Logout", "CustomUser", null, new { style = "color:#fff" })
        }
            else
            {
                @Html.ActionLink("Register", "Register", "CustomUser", null, new { style = "color:#fff" })
            <span> | </span>
            @Html.ActionLink("Sign In", "Login", "CustomUser", null, new { style = "color:#fff" })
        }
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Hebei University of Technology</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
