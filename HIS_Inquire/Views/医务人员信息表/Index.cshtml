@model PagedList.IPagedList<HIS_Inquire.Models.医务人员信息表>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "医务人员信息";
}

<h2>医务人员信息</h2>

<p>
    @Html.ActionLink("添加新医务人员", "Create")
</p>

@using (Html.BeginForm("Index", "医务人员信息表", FormMethod.Get))
{
    <p>
        请输入要检索的医务人员姓名: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="检索" />
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("姓名", "Index", new { sortOrder = ViewBag.姓名SortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            性别
        </th>
        <th>
            所属科室
        </th>
        <th>
            @Html.ActionLink("专业职务", "Index", new { sortOrder = ViewBag.专业职务SortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            学历
        </th>
        <th>
            出生日期
        </th>
        <th>
            名族
        </th>
        <th>
            政治面貌
        </th>
        <th>
            从医经历
        </th>
        <th>
            婚姻状况
        </th>
        <th>
            科室电话
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.姓名)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.性别)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.所属科室)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.专业职务)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.学历)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.出生日期)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.名族)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.政治面貌)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.从医经历)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.婚姻状况)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.科室电话)
            </td>
            <td>
                @Html.ActionLink("编辑", "Edit", new { id = item.编号 }) |
                @Html.ActionLink("详细", "Details", new { id = item.编号 }) |
                @Html.ActionLink("删除", "Delete", new { id = item.编号 })
            </td>
        </tr>
    }

</table>
<br />
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
